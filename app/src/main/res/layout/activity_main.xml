<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/gradiant_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="HangDroid"
            android:id="@+id/textView2"
            android:layout_marginBottom="5dp"
            android:textSize="40sp"
            android:textColor="@color/title_blue" />

        <Button
            android:id="@+id/onePlayerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="One Player"
            android:layout_marginBottom="10dp"   />
        <!--When button pushed, One Player Game. -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MultiPlayer"
            android:onClick="startMultiPlayerGame"
            android:id="@+id/multiplayer"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Player"
            android:onClick="startTextPlayerGame"
            android:id="@+id/textPlayer"
            android:layout_marginBottom="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Player"
            android:onClick="startContactPlayerGame"
            android:id="@+id/contactPlayer"
            android:layout_marginBottom="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scores"
            android:onClick="openScores"
            android:id="@+id/scores"
            android:layout_marginBottom="5dp" />


    </LinearLayout>

</RelativeLayout>
